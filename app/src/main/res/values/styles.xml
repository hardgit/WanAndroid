<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!-- Toolber 样式 -->
    <style name="app_toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <!-- 字体大小 -->
        <item name="android:textSize">14sp</item>
        <!--ToolBar 字体颜色 -->
        <item name="titleTextColor">#ffffff</item>
    </style>

    <attr name="WLoadingStyle" format="reference"/>

    <declare-styleable name="WLoadingView">
        <attr name="libx_loading_view_size" format="dimension"/>
        <attr name="android:color"/>
    </declare-styleable>

    <declare-styleable name="WEmptyView">
        <attr name="libx_show_loading" format="boolean"/>
        <attr name="libx_title_text" format="string"/>
        <attr name="libx_detail_text" format="string"/>
        <attr name="libx_btn_text" format="string"/>
    </declare-styleable>
</resources>
